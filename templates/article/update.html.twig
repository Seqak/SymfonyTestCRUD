{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="col-md-12 row">
            <div class="col-md-6">
                {% for message in app.flashes('warning') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr' : {'id': 'test-class'}}) }}
                    {{ form(form) }}
                {{ form_end(form) }}

                <a class="btn btn-dark" href="{{ path('article.index') }}">Back</a>
            </div>
        </div>
    </div>

{% endblock %}